@using BlazorArchitecture.WasmApp.Products.Shared.Models

<MudTable T="Product"
          Items="@Products"
          Hover="true"
          OnRowClick="HandleRowClick">
    <HeaderContent>
        <MudTh>Id</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Price</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Price">@context.Price</MudTd>
    </RowTemplate>
</MudTable>
